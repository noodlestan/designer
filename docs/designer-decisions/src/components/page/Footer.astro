---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Footer.astro';
import { LayoutStack } from '@noodlestan/designer-shows/astro';

const isHomepage = Astro.props.id === '' || Astro.props.id === 'index.mdx';
---

{
    isHomepage ? (
        <footer class="dd-site-footer">
            <div class="dd-contents">
                <LayoutStack>
                    <h3 class="">Made in Noodlestan 🐘</h3>
                </LayoutStack>
                <LayoutStack>
                    <h3 class="">Built with Starlight 🌟</h3>
                    <div class="" />
                </LayoutStack>
            </div>
        </footer>
    ) : (
        <Default {...Astro.props}>
            <slot />
        </Default>
    )
}

<style>
    .dd-site-footer {
        padding-top: 100px;
    }

    .dd-site-footer .dd-contents {
        display: flex;
        gap: 50px;
        padding-top: 100px;
        border-top: 20px solid orange;
    }
</style>
