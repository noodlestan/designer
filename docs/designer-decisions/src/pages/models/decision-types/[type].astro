---
import { getCollection, render } from 'astro:content';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { Code, Badge } from '@astrojs/starlight/components';
import type { DecisionModelMeta } from '@noodlestan/designer-decisions';
import { LayoutStack, ShowDecisionCard } from '@noodlestan/designer-shows/astro';

import { GetInvolved } from '../../../components/atoms';
import { createSidebar } from '../../../navigation/sidebar';
import { decisionLoader } from '../../../decisions';

const sidebar = await createSidebar();
const store = await decisionLoader();

export async function getStaticPaths() {
    const decisionTypes = await getCollection('decisionTypes');
    return decisionTypes.map(decisionType => ({
        params: { type: decisionType.data.type },
        props: { decisionType },
    }));
}

const { decisionType } = Astro.props;
const { Content } = await render(decisionType);

const records = store.records();

const decisionByModel = (meta: DecisionModelMeta) => {
    // WIP make sure we use only decisions from the sample set (name includes "Sample")
    return records.filter(record => record.model === meta.model)[0];
}

const decisionDataByModel = (m: DecisionModelMeta) => {
    const d = decisionByModel(m)
    const [, decision] = store.decision({ $name: d.name });
    const json = JSON.stringify(decision?.inputs()[0], null, 2);
    return json;
}

const decisionModelId = (m: DecisionModelMeta) => {
    return m.model.split('/')[1];
}

const headings = [
    {
        depth: 2,
        slug: 'models',
        text: 'Decision models',
    },
    ...decisionType.data.models.map(m => ({
        depth: 3,
        slug: decisionModelId(m),
        text: m.name,
    }))
];

const frontmatter = {
    ...decisionType.data,
    title: decisionType.data.name,
    slug: `/models/decision-types/${decisionType}`
};
---

<StarlightPage frontmatter={frontmatter} sidebar={sidebar as any} headings={headings}>
    <p>
        <Badge variant="tip" text={decisionType.data.domain} />
        <Badge variant="note" text={decisionType.data.category} />
    </p>

    <blockquote>
        <p>type: <code>{decisionType.data.type}</code></p>
        {decisionType.data.description}
    </blockquote>

    <h2 id="models">Models</h2>
    <p>The following models can be used to produce a {decisionType.data.name} decision.</p>
    {
        decisionType.data.models.map((m: DecisionModelMeta) => (
            <div>
                <h3 id={decisionModelId(m)}>{m.name}</h3>
                {m.description}
                {decisionByModel(m) && (
                    <h5 id="sample-data">Sample decision</h5>
                    <LayoutStack>
                        <ShowDecisionCard store={store} d={decisionByModel(m).name} model params />
                    </LayoutStack>
                    <h5 id="sample-data">Sample data</h5>
                    <Code lang="json" code={decisionDataByModel(m) || 'N/A'} />
                )}
                <h5 id="schema"><GetInvolved url='https://github.com/noodlestan/designer/issues/28' title="Help wanted">Documenting schemas</GetInvolved></h5>
            </div>
        ))
    }

    <Content />
</StarlightPage>

