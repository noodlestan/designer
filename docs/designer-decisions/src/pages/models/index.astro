---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { Card, CardGrid } from '@astrojs/starlight/components';

import { href } from '../../mdx';

import { createSidebar } from '../../navigation/sidebar';

const sidebar = await createSidebar();
const frontmatter = { title: 'Decision Models', slug: 'models' };
---

<StarlightPage frontmatter={frontmatter} sidebar={sidebar as any}>
    <CardGrid>
        <Card title="Schemas" icon="open-book">
            <p>Designer Decisions are validated by JSON schemas.</p>

            <a href={href('/models/schemas')} data-variant="minimal">Reference</a>
        </Card>
        <Card title="Decision Types" icon="open-book">
            <p>All decision types and models with example data.</p>

            <a href={href('/models/decision-types')} data-variant="minimal">Reference</a>
        </Card>
    </CardGrid>
</StarlightPage>
