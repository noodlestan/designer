---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { LayoutStack } from '@noodlestan/designer-shows/astro';

import { GetInvolved } from '../../../components/atoms';

import { createSidebar } from '../../../navigation/sidebar';

const sidebar = await createSidebar();
const frontmatter = { title: 'Schemas', slug: 'models/schemas' };
---

<StarlightPage frontmatter={frontmatter} sidebar={sidebar as any}>
    <LayoutStack>
        <h2>About</h2>

        <p>Schemas are auto-generated from the types in the source code.</p>

        <ul>
            <li>
                <a
                    href="https://github.com/noodlestan/designer/tree/main/packages/libs/designer-decisions/src/types/decision-inputs/models"
                    >designer-decisions/src/types/decision-inputs/models</a
                >
            </li>
            <li>
                <a
                    href="https://github.com/noodlestan/designer/tree/main/packages/libs/designer-decisions/src/types/decision-inputs/primitives"
                    >designer-decisions/src/types/decision-inputs/primitives</a
                >
            </li>
        </ul>

        <p>
            Schemas are not checked-in in any repository. After they are generated they are
            published to NPM in the <a
                href="https://www.npmjs.com/package/@noodlestan/designer-schemas?activeTab=code"
                >@noodlestan/designer-schemas</a
            > package.
        </p>
    </LayoutStack>
    <GetInvolved url="https://github.com/noodlestan/designer/issues/28">
        ðŸš§ Document schemas
    </GetInvolved>
</StarlightPage>
