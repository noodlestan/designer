{
  "name": "@noodlestan/designer-integration-astro",
  "version": "v0.0.11",
  "description": "Astro integration for Designer Decisions",
  "author": "Noodlestan Collective",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noodlestan/designer.git"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./styles/*": "./src/styles/"
  },
  "files": [
    "src/"
  ],
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:astro": "astro check",
    "build": "npm run build:astro",
    "test": "echo nothing to test",
    "test:watch": "echo nothing to test",
    "lint": "prettier . -c && eslint .",
    "lint:fix": "prettier . -c --write && eslint . --fix",
    "dev": "tsc --watch --noEmit --project src/solidjs/tsconfig.json",
    "ci": "npm run build:clean && npm run build"
  },
  "dependencies": {
    "@noodlestan/designer-decisions": "v0.0.11",
    "@noodlestan/designer-functions": "v0.0.11",
    "@noodlestan/designer-shows": "v0.0.11"
  },
  "peerDependencies": {
    "astro": "^5.2.5"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "astro": "5.2.5",
    "vite": "6.1.0"
  }
}
