{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:designer:config",
  "additionalProperties": false,
  "type": "object",
  "required": ["store"],
  "properties": {
    "store": {
      "type": "object",
      "properties": {
        "schemas": {
          "type": "array",
          "items": { "$ref": "#/$defs/SchemaSource" }
        },
        "decisions": {
          "type": "array",
          "items": { "$ref": "#/$defs/DecisionSourceOrString" }
        },
        "moduleResolver": {
          "isResolverFunction": true
        }
      },
      "required": ["schemas", "decisions"]
    }
  },
  "$defs": {
    "DataSource": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": { "type": "string", "const": "path" },
            "path": { "type": "string" }
          },
          "required": ["type", "path"]
        },
        {
          "type": "object",
          "properties": {
            "type": { "type": "string", "const": "package" },
            "package": { "type": "string" },
            "path": { "type": "string" }
          },
          "required": ["type", "package", "path"]
        }
      ]
    },
    "SchemaSource": {
      "type": "object",
      "properties": {
        "urnBase": { "type": "string" },
        "source": { "$ref": "#/$defs/DataSource" }
      },
      "required": ["urnBase", "source"]
    },
    "DecisionSource": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "source": { "$ref": "#/$defs/DataSource" }
      },
      "required": ["name", "source"]
    },
    "DecisionSourceOrString": {
      "oneOf": [{ "$ref": "#/$defs/DecisionSource" }, { "type": "string" }]
    }
  }
}
