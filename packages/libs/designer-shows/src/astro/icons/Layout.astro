---
export type { Props } from './types.ts';

const { size, class: iconName, name, ...rest } = Astro.props;

const props = Object.assign(
    {
        xmlns: 'http://www.w3.org/2000/svg',
        'stroke-width': 2,
        width: size ?? 24,
        height: size ?? 24,
        stroke: 'currentColor',
        'stroke-linecap': 'round',
        'stroke-linejoin': 'round',
        fill: 'none',
        viewBox: '0 0 24 24',
    },
    rest,
);
---

<svg {...props} class:list={['lucide', `lucide-${name}`, iconName]}>
    <slot />
</svg>
