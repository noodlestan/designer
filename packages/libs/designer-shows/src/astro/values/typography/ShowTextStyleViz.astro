---
import type { TextStyleVizProps } from '../../types';
import { getTextStyleVizComponent } from '../../meta/getTextStyleVizComponent';

type Props = TextStyleVizProps;

const { v, viz = true, size = 'auto', options } = Astro.props;

const Viz = getTextStyleVizComponent(viz);

const opt = options || {};
---

{viz && <Viz v={v} size={size} options={opt} />}
