---
import { getColorVizComponent } from '../../meta';
import type { ColorVizOptions, ColorVizProps } from '../../types';

type Props = ColorVizProps;

const { v: colorValue, viz = true, size = 'auto', options } = Astro.props;

const Viz = getColorVizComponent(viz);

const opt = (options || {}) as ColorVizOptions;
---

{viz && <Viz v={colorValue} size={size} options={opt} />}
