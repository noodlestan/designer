---
import type {
    ColorChannelValue,
    ColorChannelName,
    ColorChannelValueCommon,
} from '@noodlestan/designer-decisions';

import { DecisionValueContainer, ShowError } from '../../atoms';
import { LayoutStack } from '../../layouts';
import type { ShowValueProps } from '../../types';

type Props = ShowValueProps & {
    v?: ColorChannelValue;
};

const { v, value = true, muteErrors } = Astro.props;

const channelV = v as ColorChannelValueCommon;
const channelValue = channelV?.get();
const showErrors = !muteErrors && v?.context().hasErrors();
---

{
    value && channelV !== undefined && (
        <LayoutStack>
            <DecisionValueContainer>
                {showErrors && <ShowError size="xs" />}
                {channelValue}
            </DecisionValueContainer>
        </LayoutStack>
    )
}
