---
import type { ColorChannelBaseValue } from '@noodlestan/designer-decisions';

import { DecisionValueContainer, ShowError } from '../../atoms';
import { LayoutStack } from '../../layouts';
import type { ColorChannelValueProps } from '../../types';

type Props = ColorChannelValueProps;
const { v, value = true, muteErrors } = Astro.props;

const channelV = v as ColorChannelBaseValue;
const channelValue = channelV?.get().toNumber();
const showErrors = !muteErrors && v?.context().hasErrors();
---

{
    value && channelV !== undefined && (
        <LayoutStack>
            <DecisionValueContainer>
                {showErrors && <ShowError size="xs" />}
                {channelValue}
            </DecisionValueContainer>
        </LayoutStack>
    )
}
