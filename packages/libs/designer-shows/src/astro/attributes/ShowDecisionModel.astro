---
import { type ShowDecisionProps } from '../types';

type Props = ShowDecisionProps;

const { store, d } = Astro.props;

const decision = store.decision({ $name: d });
const model = decision && decision.model(); // WIP match context
---

<div class="dd-attr-model">
    <h4 class="dd-label">Model:</h4>
    <p class="dd-value">{model}</p>
</div>

<style>
    .dd-attr-model {
        display: flex;
        align-items: start;
        gap: 5px;
        color: var(--dd-text-color);
    }

    .dd-attr-model .dd-label {
        font-size: var(--dd-text-size);
        font-weight: var(--dd-label-weight);
        line-height: var(--dd-text-line-height);
        color: var(--dd-text-color);
    }

    .dd-attr-model .dd-value {
        font-size: var(--dd-text-size);
        font-weight: var(--dd-text-weight);
        line-height: var(--dd-text-line-height);
        color: var(--dd-text-color);
    }
</style>
