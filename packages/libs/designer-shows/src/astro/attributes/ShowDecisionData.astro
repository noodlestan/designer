---
import { type ShowDecisionProps } from '../types';

import { Code } from 'astro-expressive-code/components';

type Props = ShowDecisionProps;

const { store, d } = Astro.props;

const decision = store.decision({ $name: d });
const json = JSON.stringify(decision?.records()[0].input, null, 2); // WIP match context
---

<div class="dd-attr-data">
    <pre class="pre"><Code lang="json" code={json} /></pre>
</div>

<style>
    .dd-attr-data .pre {
        overflow: auto;
        max-height: var(--dd-attr-data-max-height);
        padding: 0;
    }
</style>
