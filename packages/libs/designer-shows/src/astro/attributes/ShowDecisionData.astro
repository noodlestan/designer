---
import { type ShowDataProps } from '../types';

import { Code } from 'astro-expressive-code/components';

type Props = ShowDataProps;

const { store, d } = Astro.props;

const [, decision] = store.decision({ $name: d });
const json = JSON.stringify(decision?.inputs()[0], null, 2); // WIP match context
---

<div class="dd-decision-data">
    <pre class="pre"><Code lang="json" code={json} /></pre>
</div>

<style>
    .dd-decision-data .pre {
        overflow: auto;
        max-height: var(--dd-data-max-height);
        padding: 0;
    }
</style>
