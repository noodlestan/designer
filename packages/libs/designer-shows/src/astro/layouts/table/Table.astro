---
import TableHead from './TableHead.astro';

type Props = {
    columns: string[];
    caption?: string;
};

const { caption, columns } = Astro.props;
---

<table class:list={['dd-table']}>
    {caption && <caption>{caption}</caption>}
    <TableHead columns={columns} />
    <tbody>
        <slot />
    </tbody>
</table>

<style>
    .dd-table {
        width: 100%;
    }
</style>
