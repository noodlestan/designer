---
type Props = {
    tag?: 'div';
    columns?: number;
    vpad?: boolean;
};

const { tag: Element = 'div', columns = 2, vpad } = Astro.props;
const style = { '--columns': columns };
---

<Element class:list={['dd-grid-list', { 'dd-vpad': vpad }]} style={style}>
    <slot />
</Element>

<style define:vars={{ columns, foo: 'var' }}>
    .dd-grid-list {
        display: grid;
        column-gap: var(--dd-space-gap);
        row-gap: var(--dd-space-gap);
        grid-template-columns: repeat(var(--columns), 1fr);
    }

    .dd-vpad {
        padding-top: 1rem;
    }
</style>
