---
type Props = {
    flow?: 'tight';
    align?: 'start' | 'center';
    pad?: 's' | 'm' | 'l';
    tag?: 'div' | 'ul' | 'li';
};

const { flow, align = 'start', pad = 'm', tag: Element = 'div' } = Astro.props;
---

<Element class:list={['dd-layout-centered', flow, align, `pad-${pad}`]}>
    <slot />
</Element>

<style>
    .dd-layout-centered {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: var(--__layout-centered-pad);
        list-style: none;
    }

    .flow {
        margin-block: 1rem;
    }

    .center {
        align-items: center;
    }

    .pad-s {
        --__layout-centered-pad: var(--dd-pad-s);
    }

    .pad-m {
        --__layout-centered-pad: var(--dd-pad-m);
    }

    .pad-l {
        --__layout-centered-pad: var(--dd-pad-l);
    }

    .wrap {
        flex-wrap: wrap;
    }
</style>
