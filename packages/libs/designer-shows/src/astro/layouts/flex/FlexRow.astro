---
type Props = {
    tag?: 'div' | 'ul' | 'li';
    wrap?: boolean;
    align?: 'start' | 'center';
};

const { tag: Element = 'div', align = 'start', wrap = true } = Astro.props;
---

<Element class:list={['dd-flex-row', { wrap }]}>
    <slot />
</Element>

<style define:vars={{ '--dd-flex-row-align': align }}>
    .dd-flex-row {
        display: flex;
        flex-direction: row;
        align-items: var(--dd-flex-row-align);
        margin: 0 !important;
        padding: 0 !important;
        gap: var(--dd-space-gap);
        list-style: none;
    }

    .dd-flex-row > :global(*) {
        margin: 0 !important;
    }

    .wrap {
        flex-wrap: wrap;
    }
</style>
