---
type Props = {
    tag?: 'div' | 'ul' | 'li';
    align?: 'start' | 'center';
    wrap?: boolean;
    vpad?: boolean;
};

const { tag: Element = 'div', align = 'start', wrap = true, vpad } = Astro.props;
---

<Element class:list={['dd-flex-row', align, { wrap, vpad }]}>
    <slot />
</Element>

<style>
    .dd-flex-row {
        display: flex;
        flex-direction: row;
        padding: 0;
        gap: var(--dd-space-gap);
        list-style: none;
    }

    .center {
        align-items: center;
    }

    .wrap {
        flex-wrap: wrap;
    }

    .dd-flex-row.vpad {
        margin-top: 1rem;
    }
</style>
