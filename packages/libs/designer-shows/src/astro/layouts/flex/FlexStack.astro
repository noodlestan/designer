---
type Props = {
    tag?: 'div' | 'ul' | 'li';
    justify?: 'start' | 'center';
    vpad?: boolean;
};

const { tag: Element = 'div', justify = 'start', vpad } = Astro.props;
---

<Element class:list={['dd-flex-stack', justify, { 'dd-vpad': vpad }]}>
    <slot />
</Element>

<style>
    .dd-flex-stack {
        display: flex;
        flex-direction: column;
        padding: 0;
        justify-content: start;
        gap: var(--dd-space-gap);
    }

    .center {
        justify-content: center;
    }

    .dd-vpad {
        padding-top: 1rem;
    }
</style>
