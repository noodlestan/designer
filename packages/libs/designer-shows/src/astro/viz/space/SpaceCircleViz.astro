---
import { ShowError } from '../../atoms';
import type { SpaceVizProps } from '../../types';

type Props = SpaceVizProps;

const { v: space, muteErrors } = Astro.props;

const { value: v, units } = space?.toObject() || {};
const vWithUnits = `${v}${units}`;
const showErrors = !muteErrors && space?.context().hasErrors();
---

<div class:list={['dd-space-circle-viz']}>
    {showErrors && <ShowError size="s" position="block" />}
    <div class="dd-circle"></div>
</div>

<style define:vars={{ __size: vWithUnits }}>
    .dd-space-circle-viz {
        position: relative;
        width: var(--__size);
        min-width: var(--__size);
        max-width: var(--__size);
        height: var(--__size);
        min-height: var(--__size);
        max-height: var(--__size);
    }

    .dd-space-circle-viz :global(.dd-show-error) {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .dd-circle {
        width: 100%;
        height: 100%;
        background-color: var(--dd-space-viz-color);
        border: var(--dd-space-viz-border);
        border-radius: 50%;
    }
</style>
