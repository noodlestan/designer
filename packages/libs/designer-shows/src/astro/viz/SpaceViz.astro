---
import { type SpaceValue } from '@noodlestan/designer-decisions';
import type { ShowValueSize } from '../types';

interface Props {
    space: SpaceValue;
    size?: ShowValueSize;
}

const { space, size = 'auto' } = Astro.props;

const { value: v, units } = space?.getValueWithUnits() || {};
const vWithUnits = `${v}${units}`;
---

<div class:list={['dd-space-viz', size]}><div class="block"></div></div>

<style define:vars={{ size: vWithUnits }}>
    .dd-space-viz {
        min-width: var(--size);
        max-width: var(--size);
    }

    .s {
        min-height: var(--dd-value-size-xs);
        max-height: var(--dd-value-size-xs);
    }

    .s {
        min-height: var(--dd-value-size-s);
        max-height: var(--dd-value-size-s);
    }

    .m {
        min-height: var(--dd-value-size-m);
        max-height: var(--dd-value-size-m);
    }

    .l {
        min-height: var(--dd-value-size-l);
        max-height: var(--dd-value-size-l);
    }

    .xl {
        min-height: var(--dd-value-size-xl);
        max-height: var(--dd-value-size-xl);
    }

    .block {
        width: 100%;
        height: 100%;
        background-color: var(--dd-space-viz-color);
        border: var(--dd-space-viz-border);
        border-radius: var(--dd-space-viz-border-radius);
    }
</style>
