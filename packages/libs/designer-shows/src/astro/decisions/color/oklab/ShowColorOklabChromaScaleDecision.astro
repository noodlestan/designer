---
import { isColorOklabChromaScaleDecision } from '@noodlestan/designer-decisions';

import type { ShowDecisionProps } from '../../../types';
import { LayoutStack } from '../../../layouts';
import { ShowColorChannelValue } from '../../../values';
import { ShowDecisionUnavailable } from '../../unavailable';

type Props = ShowDecisionProps;

const { store, d, size, ...rest } = Astro.props;

const [, decision] = store.decision({ $name: d });
const chromaScale =
    decision && isColorOklabChromaScaleDecision(decision) ? decision.produce() : undefined;

const items = chromaScale?.get().items();

const s = size || 's';
---

{
    decision && (
        <LayoutStack>
            {items?.map(item => (
                <ShowColorChannelValue channel="oklab-chroma" v={item} size={s} {...rest} />
            ))}
        </LayoutStack>
    )
}
{!decision && <ShowDecisionUnavailable d={d as string} />}
