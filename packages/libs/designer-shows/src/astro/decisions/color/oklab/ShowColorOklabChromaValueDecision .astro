---
import { isColorOklabChromaValueDecision } from '@noodlestan/designer-decisions';

import type { ShowDecisionProps } from '../../../types';
import { ShowColorChannelValue } from '../../../values';
import { ShowDecisionUnavailable } from '../../unavailable';

type Props = ShowDecisionProps;

const { store, d, ...rest } = Astro.props;

const [, decision] = store.decision({ $name: d });
const chroma =
    decision && isColorOklabChromaValueDecision(decision) ? decision.produce() : undefined;
---

{decision && <ShowColorChannelValue v={chroma} channel="oklab-chroma" {...rest} />}
{!decision && <ShowDecisionUnavailable d={d as string} />}
