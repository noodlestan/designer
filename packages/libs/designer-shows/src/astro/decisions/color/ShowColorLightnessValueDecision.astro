---
import { isColorLightnessValueDecision } from '@noodlestan/designer-decisions';

import type { ShowDecisionProps } from '../../types';
import { resolveDecisionProp } from '../../helpers';
import ShowLightnessValue from '../../primitives/colors/ShowLightnessValue.astro';

type Props = ShowDecisionProps;

const { store, d, ...rest } = Astro.props;

const decision = resolveDecisionProp(store, d);
const lightness =
    decision && isColorLightnessValueDecision(decision) ? decision.produce().value() : undefined;
---

<ShowLightnessValue lightness={lightness} {...rest} />
