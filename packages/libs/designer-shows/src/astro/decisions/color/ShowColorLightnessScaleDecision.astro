---
import { isColorLightnessScaleDecision } from '@noodlestan/designer-decisions';

import type { ShowDecisionProps } from '../../types';
import { resolveDecisionProp } from '../../helpers';
import { FlexStack } from '../../layouts';
import ShowLightnessValue from '../../primitives/colors/ShowLightnessValue.astro';

type Props = ShowDecisionProps;

const { store, d, size, ...rest } = Astro.props;

const decision = resolveDecisionProp(store, d);
const lightnessScale =
    decision && isColorLightnessScaleDecision(decision) ? decision.produce().value() : undefined;

const items = lightnessScale?.get();

const s = size || 's';
---

<FlexStack>
    {items?.map(item => <ShowLightnessValue lightness={item} size={s} {...rest} />)}
</FlexStack>
