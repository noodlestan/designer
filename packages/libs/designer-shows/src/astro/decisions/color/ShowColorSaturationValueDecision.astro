---
import { isColorSaturationValueDecision } from '@noodlestan/designer-decisions';

import type { ShowDecisionProps } from '../../types';
import { resolveDecisionProp } from '../../helpers';
import ShowSaturationValue from '../../primitives/colors/ShowSaturationValue.astro';

type Props = ShowDecisionProps;

const { store, d, ...rest } = Astro.props;

const decision = resolveDecisionProp(store, d);
const saturation =
    decision && isColorSaturationValueDecision(decision) ? decision.produce().value() : undefined;
---

<ShowSaturationValue saturation={saturation} {...rest} />
