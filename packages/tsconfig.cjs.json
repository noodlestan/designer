{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    // module
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // strict
    "strict": true,
    "noImplicitAny": true,
    // "verbatimModuleSyntax": true,
    "isolatedModules": true,
    // types
    "types": []
  }
}
